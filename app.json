{
  "expo": {
    "name": "ORDIX - Sayı Sıralama Oyunu",
    "slug": "ordix",
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ordix",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Eğlenceli sayı sıralama oyunu! Sayıları küçükten büyüğe doğru sırala ve en yüksek skoru elde et. Zihin egzersizi için mükemmel!",
    "primaryColor": "#87CEEB",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ordix.sayisiralama",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama kamera kullanmaz",
        "NSMicrophoneUsageDescription": "Bu uygulama mikrofon kullanmaz"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#87CEEB"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.ordix.sayisiralama",
      
      "versionCode": 200,


      "permissions": [
        "VIBRATE"
      ],
      "blockedPermissions": [
        "RECORD_AUDIO"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.ordix.sayisiralama"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#87CEEB"
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "d3d3d717-b2a1-41b5-8b05-3fdd11c4383c"
      }
    },
    "owner": "sundevflower"
  }
}
